<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Pantalla"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".modelo_de_caja">

    <FrameLayout
        android:id="@+id/Caja"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="40dp"
        android:background="#070707">

        <FrameLayout
            android:id="@+id/Contenido"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:background="#8BC34A">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center"
                android:rotation="-45"
                android:text="Contenido"
                android:textSize="50sp" />
        </FrameLayout>


        <FrameLayout
            android:id="@+id/PaddingLeft"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="#673AB7">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center"
                android:rotation="90"
                android:text="Padding Left"
                android:textColor="#FFFFFF" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/PaddingRight"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="#673AB7">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center"
                android:rotation="90"
                android:text="Padding Right"
                android:textColor="#FFFFFF" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/PaddingTop"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#9C27B0">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center"
                android:text="PaddingTop"
                android:textColor="#FFFFFF" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/PaddingBottom"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:background="#9C27B0">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center"
                android:text="Padding Bottom"
                android:textColor="#FFFFFF" />
        </FrameLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/MarginTop"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#FFEB3B">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center"
            android:text="Margin Top" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/MarginBottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="#FFEB3B">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center"
            android:text="Margin Bottom" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/MarginLeft"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="#FFEB3B">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center"
            android:rotation="90"
            android:text="Margin Left" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/MarginRight"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="#FFEB3B">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center"
            android:rotation="90"
            android:text="Margin Right" />
    </FrameLayout>

</FrameLayout>